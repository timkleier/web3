<p id="notice"><%= notice %></p>

<h1>Term Definitions</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Source name</th>
      <th>Source url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @term_definitions.each do |term_definition| %>
      <tr>
        <td><%= term_definition.description %></td>
        <td><%= term_definition.source_name %></td>
        <td><%= term_definition.source_url %></td>
        <td><%= link_to 'Show', term_definition %></td>
        <td><%= link_to 'Edit', edit_term_definition_path(term_definition) %></td>
        <td><%= link_to 'Destroy', term_definition, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Term Definition', new_term_definition_path %>
